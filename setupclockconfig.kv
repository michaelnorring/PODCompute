#:kivy 1.10.1

<SetupClockConfig>:
    BoxLayout:
        orientation: 'vertical'
    
        BoxLayout:
            id: ClockRoulette
                 
        BoxLayout:
            orientation: 'horizontal'
            
            Button:
                text: 'Save'
                size: 100,100
                size_hint: None, None                  
                on_press: root.saveClock()
            Widget:
            Button:
                text: 'Cancel'
                size: 100,100
                size_hint: None, None
                on_release: root.cancelClock()
        
        
            



