#:kivy 1.10.1

<ScreenConfig>:
    on_enter: root.SetupScreen()
    
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'ScreenBackground.png'

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'left': 1, 'top':1}
            #size: 500, 300
            #size_hint: (None, None)
            spacing: 5

            BoxLayout:
                orientation: 'horizontal'
                #pos_hint: {'left': 1, 'top':1}
                size: 500, 150
                size_hint: (None, None)
                spacing: 5

                BoxLayout:
                    orientation: 'vertical'
                    halign: 'right'
                    #pos_hint: {'left': 1, 'top':1}
                    #size: 150, 100
                    #size_hint: (None, None)

                    Label:
                        text: 'Interface: '
                    
                    Label:
                        text: 'OS: '

            
                BoxLayout:
                    orientation: 'vertical'
                    #pos_hint: {'left': 1, 'top':1}
                    
                    Label:
                        id: Interface
                        name: 'Interface'
                    
                    Label:
                        id: OS
                        name: 'OS'

            BoxLayout:
                ScrollView:
                    Label:
                        id: Status
                        name: 'Status'
                        #text_size: self.size
                        size_hint_y: None
                        text_size: self.width, None
                        height: self.texture_size[1]